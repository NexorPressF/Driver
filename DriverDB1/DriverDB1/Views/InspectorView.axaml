<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DriverDB1.Views.InspectorView">
    <Grid RowDefinitions="*, 50">
        <DataGrid Name="MainDG" AutoGenerateColumns="True" Grid.Row="0"/>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button Content="Добавить" Name="AddBtn" Click="AddBtn_OnClick"/>
            <Button Content="Обзор" Name="ObZBtn" Click="ObZBtn_OnClick"/>
            <Button Content="Удалить" Name="DeleteBtn" Click="DeleteBtn_OnClick"/>
        </StackPanel>
    </Grid>
</UserControl>
